apiVersion: machinelearning.seldon.io/v1alpha3
kind: SeldonDeployment
metadata:
  generation: 1
  labels:
    app: seldon
  name: mab-model
spec:
  name: mab-model
  predictors:
  - componentSpecs:
    - spec:
        containers:
        - env:
          - name: PREDICTIVE_UNIT_SERVICE_PORT
            value: "9000"
          - name: PREDICTIVE_UNIT_ID
            value: classifier-1
          - name: PREDICTOR_ID
            value: abtest
          - name: SELDON_DEPLOYMENT_ID
            value: mab-model
          image: pipelineai/predict-meanclassifier:2.0.0 
          imagePullPolicy: IfNotPresent
          lifecycle:
            preStop:
              exec:
                command:
                - /bin/sh
                - -c
                - /bin/sleep 10
          livenessProbe:
            failureThreshold: 3
            initialDelaySeconds: 60
            periodSeconds: 5
            successThreshold: 1
            tcpSocket:
              port: http
            timeoutSeconds: 1
          name: classifier-1
          ports:
          - containerPort: 9000
            name: http
            protocol: TCP
          readinessProbe:
            failureThreshold: 3
            initialDelaySeconds: 20
            periodSeconds: 5
            successThreshold: 1
            tcpSocket:
              port: http
            timeoutSeconds: 1
          resources:
            requests:
              memory: 1Mi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts:
          - mountPath: /etc/podinfo
            name: podinfo
        dnsPolicy: ClusterFirst
        restartPolicy: Always
        schedulerName: default-scheduler
        securityContext: {}
        terminationGracePeriodSeconds: 20
        volumes:
        - downwardAPI:
            defaultMode: 420
            items:
            - fieldRef:
                apiVersion: v1
                fieldPath: metadata.annotations
              path: annotations
          name: podinfo
    - spec:
        containers:
        - env:
          - name: PREDICTIVE_UNIT_SERVICE_PORT
            value: "9001"
          - name: PREDICTIVE_UNIT_ID
            value: classifier-2
          - name: PREDICTOR_ID
            value: abtest
          - name: SELDON_DEPLOYMENT_ID
            value: mab-model
          image: pipelineai/predict-meanclassifier:2.0.0 
          imagePullPolicy: IfNotPresent
          lifecycle:
            preStop:
              exec:
                command:
                - /bin/sh
                - -c
                - /bin/sleep 10
          livenessProbe:
            failureThreshold: 3
            initialDelaySeconds: 60
            periodSeconds: 5
            successThreshold: 1
            tcpSocket:
              port: http
            timeoutSeconds: 1
          name: classifier-2
          ports:
          - containerPort: 9001
            name: http
            protocol: TCP
          readinessProbe:
            failureThreshold: 3
            initialDelaySeconds: 20
            periodSeconds: 5
            successThreshold: 1
            tcpSocket:
              port: http
            timeoutSeconds: 1
          resources:
            requests:
              memory: 1Mi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts:
          - mountPath: /etc/podinfo
            name: podinfo
        dnsPolicy: ClusterFirst
        restartPolicy: Always
        schedulerName: default-scheduler
        securityContext: {}
        terminationGracePeriodSeconds: 20
        volumes:
        - downwardAPI:
            defaultMode: 420
            items:
            - fieldRef:
                apiVersion: v1
                fieldPath: metadata.annotations
              path: annotations
          name: podinfo
    - spec:
        containers:
        - env:
          - name: PREDICTIVE_UNIT_SERVICE_PORT
            value: "9002"
          - name: PREDICTIVE_UNIT_ID
            value: eg-router
          - name: PREDICTOR_ID
            value: abtest
          - name: SELDON_DEPLOYMENT_ID
            value: mab-model
          - name: PREDICTIVE_UNIT_PARAMETERS
            value: '[{"name":"n_branches","value":"2","type":"INT"},{"name":"epsilon","value":"0.2","type":"FLOAT"},{"name":"verbose","value":"1","type":"BOOL"}]'
          image: seldonio/mab_epsilon_greedy:1.3
          imagePullPolicy: IfNotPresent
          lifecycle:
            preStop:
              exec:
                command:
                - /bin/sh
                - -c
                - /bin/sleep 10
          livenessProbe:
            failureThreshold: 3
            initialDelaySeconds: 60
            periodSeconds: 5
            successThreshold: 1
            tcpSocket:
              port: http
            timeoutSeconds: 1
          name: eg-router
          ports:
          - containerPort: 9002
            name: http
            protocol: TCP
          readinessProbe:
            failureThreshold: 3
            initialDelaySeconds: 20
            periodSeconds: 5
            successThreshold: 1
            tcpSocket:
              port: http
            timeoutSeconds: 1
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts:
          - mountPath: /etc/podinfo
            name: podinfo
        dnsPolicy: ClusterFirst
        restartPolicy: Always
        schedulerName: default-scheduler
        securityContext: {}
        terminationGracePeriodSeconds: 20
        volumes:
        - downwardAPI:
            defaultMode: 420
            items:
            - fieldRef:
                apiVersion: v1
                fieldPath: metadata.annotations
              path: annotations
          name: podinfo
    graph:
      children:
      - children: []
        endpoint:
          service_host: localhost
          service_port: 9000
          type: REST
        implementation: UNKNOWN_IMPLEMENTATION
        name: classifier-1
        type: MODEL
      - children: []
        endpoint:
          service_host: mab-model-abtest-classifier-2-pipelineai-mean-classifier-2-0-0.kubeflow.svc.cluster.local.
          service_port: 9001
          type: REST
        implementation: UNKNOWN_IMPLEMENTATION
        name: classifier-2
        type: MODEL
      endpoint:
        service_host: mab-model-abtest-eg-router-seldonio-mab-epsilon-greedy-1-1.kubeflow.svc.cluster.local.
        service_port: 9002
        type: REST
      implementation: UNKNOWN_IMPLEMENTATION
      name: eg-router
      parameters:
      - name: n_branches
        type: INT
        value: "2"
      - name: epsilon
        type: FLOAT
        value: "0.2"
      - name: verbose
        type: BOOL
        value: "1"
      type: ROUTER
    labels:
      fluentd: "true"
      version: v1
    name: abtest
    replicas: 1
    svcOrchSpec:
      env:
      - name: SELDON_LOG_MESSAGES_EXTERNALLY
        value: "false"
      - name: SELDON_LOG_MESSAGE_TYPE
        value: seldon.message.pair
      - name: SELDON_LOG_REQUESTS
        value: "false"
      - name: SELDON_LOG_RESPONSES
        value: "false"
      resources:
        requests:
          cpu: "0.1"
